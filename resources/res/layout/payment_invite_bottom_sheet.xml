<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
    <LinearLayout android:orientation="vertical" android:id="@+id/invite_ui_loader" android:paddingTop="62dp" android:paddingBottom="62dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/secondary_text" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/payments_invite_loader_wait" app:fontFamily="sans-serif"/>
        <com.whatsapp.CircularProgressBar android:layout_gravity="center_horizontal" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginTop="16dp" android:indeterminate="true" android:indeterminateOnly="true" app:cpbBackground="@android:color/transparent" app:cpbColor="@color/primary_light"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/invite_ui_content" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize">
            <com.whatsapp.WaImageButton android:layout_gravity="center" android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_back" android:contentDescription="@string/back" app:tint="@color/fb_pay_hub_icon_tint" style="?attr/actionButtonStyle"/>
            <FrameLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/title_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.whatsapp.WaTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/primary_text" android:id="@+id/payment_invite_bottom_sheet_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/payment_multi_invite_bottom_sheet_title" android:lineSpacingExtra="8sp"/>
            </FrameLayout>
        </FrameLayout>
        <GridView android:id="@+id/selected_items" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="16dp" android:layout_marginRight="4dp" android:verticalSpacing="16dp" android:stretchMode="spacingWidthUniform" android:columnWidth="62dp" android:numColumns="auto_fit"/>
        <com.whatsapp.WaImageView android:layout_gravity="center" android:id="@+id/hero_payments" android:layout_width="108dp" android:layout_height="108dp" android:layout_marginTop="16dp" android:src="@drawable/payment_invite_bottom_sheet" android:contentDescription="@string/payment_logo"/>
        <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/secondary_text" android:id="@+id/payment_invite_bottom_sheet_body" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/payment_multi_invite_bottom_sheet_body" android:lineSpacingExtra="6sp"/>
        <com.whatsapp.components.Button android:id="@+id/invite_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="12dp" android:text="@string/payments_multi_invite_button_text" style="@style/WA.Button"/>
    </LinearLayout>
</LinearLayout>
