<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/conversations_archive_header" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.whatsapp.WaImageView android:id="@+id/top_archived_row_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/conversations_list_divider"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/archived_row_container" android:layout_width="match_parent" android:layout_height="52dp">
        <com.whatsapp.WaImageView android:id="@+id/archived_row_image" android:layout_width="82dp" android:layout_height="match_parent" android:src="@drawable/ic_archive_chatcell" android:scaleType="center" app:tint="@color/archive_header_icon_color"/>
        <com.whatsapp.WaTextView android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/archived_row" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/archived" style="@style/ListItemTitle"/>
        <FrameLayout android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/content_indicator_container" android:paddingRight="@dimen/list_row_padding" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/archive_row_header_unread_indicator_margin_right" android:layout_weight="1">
            <com.whatsapp.WaImageView android:layout_gravity="right" android:id="@+id/archive_row_important_chat_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/important_message" android:contentDescription="@string/menu_important_message" app:tint="@color/unread_indicator"/>
            <com.whatsapp.WaTextView android:textSize="12sp" android:textStyle="normal" android:gravity="center" android:layout_gravity="right" android:id="@+id/archive_row_counter" android:paddingLeft="@dimen/conversation_row_unread_indicator_padding" android:paddingTop="0dp" android:paddingRight="@dimen/conversation_row_unread_indicator_padding" android:paddingBottom="0dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="21dp" android:minHeight="21dp" style="@style/ListItemTitle"/>
        </FrameLayout>
    </LinearLayout>
    <com.whatsapp.WaImageView android:id="@+id/bottom_archived_row_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/conversations_list_divider"/>
</LinearLayout>
