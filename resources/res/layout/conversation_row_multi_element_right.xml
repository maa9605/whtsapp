<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:gravity="center" android:layout_gravity="right" android:orientation="vertical" android:layout_width="@dimen/conversation_row_document_width" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:minHeight="30dp">
        <include layout="@layout/conversation_row_participant_header"/>
        <include layout="@layout/conversation_row_quoted_frame"/>
        <com.whatsapp.conversation.conversationrow.ProductHeaderLayout android:id="@+id/conversation_row_header" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.whatsapp.TextEmojiLabel android:textAppearance="@style/WA.TextAppearance.ConversationRowMessage" android:textSize="17sp" android:id="@+id/title" android:paddingLeft="@dimen/conversation_row_inner_item_padding" android:paddingRight="@dimen/product_margin_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:fontFamily="sans-serif-medium"/>
        <com.whatsapp.TextEmojiLabel android:textAppearance="@style/WA.TextAppearance.ConversationRowMessage" android:id="@+id/description" android:paddingLeft="@dimen/conversation_row_inner_item_padding" android:paddingRight="@dimen/product_margin_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        <com.whatsapp.TextEmojiLabel android:textSize="@dimen/conversation_text_row_tv_small" android:textColor="@color/conversation_row_date" android:id="@+id/bottom_message" android:paddingLeft="@dimen/conversation_row_inner_item_padding" android:paddingTop="4dp" android:paddingRight="@dimen/conversation_row_inner_item_padding" android:paddingBottom="@dimen/conversation_template_row_footer_margin_bottom" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="bottom|right" android:orientation="horizontal" android:id="@+id/date_wrapper" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.whatsapp.WaTextView android:id="@+id/date" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/WA.TextAppearance.ConversationRowDate"/>
        </LinearLayout>
        <View android:id="@+id/button_div" style="@style/SectionDivider.Heavy"/>
        <FrameLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/button" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.whatsapp.TextEmojiLabel android:textColor="@color/multi_element_button" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/button_content" android:focusable="false" android:layout_width="wrap_content" android:maxLines="1" android:drawablePadding="@dimen/button_inset_vertical" app:drawableTint="@color/multi_element_button" style="@style/ConversationSharedContactButton"/>
        </FrameLayout>
    </LinearLayout>
</merge>
