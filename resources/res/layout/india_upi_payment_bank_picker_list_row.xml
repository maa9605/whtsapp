    </LinearLayout>
    <View android:id="@+id/divider" android:background="@drawable/payments_divider_gray" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="58dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
