<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="bottom" android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/input_container" android:background="@drawable/ib_new_round" android:clipChildren="false" android:clipToPadding="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/capture_preview_caption_horizontal_margin" android:layout_marginBottom="@dimen/capture_preview_caption_bottom_margin" android:minHeight="@dimen/capture_preview_caption_bubble_height" android:layout_toLeftOf="@+id/send" android:layout_alignParentLeft="true">
            <FrameLayout android:id="@+id/mention_attach" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/input_container_inner" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:id="@+id/no_emoji_padding" android:paddingLeft="@dimen/capture_preview_caption_text_margin_left" android:layout_width="wrap_content" android:layout_height="1dp"/>
                <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/emoji_btn_holder" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.whatsapp.WaTextView android:textColor="@color/secondary_text" android:layout_gravity="center_horizontal" android:id="@+id/counter" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.whatsapp.WaImageButton android:layout_gravity="center" android:id="@+id/emoji_picker_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ib_emoji" android:contentDescription="@string/emoji_button_description" style="@style/ActionBarButtonStyle"/>
                </LinearLayout>
                <com.whatsapp.mentions.MentionableEntry android:scrollbarThumbVertical="@color/hint_text" android:scrollbarStyle="insideInset" android:textColor="@color/primary_text" android:textColorHint="@color/hint_text" android:layout_gravity="center_vertical" android:id="@+id/caption" android:background="@color/capturePreviewCaptionInputBackground" android:paddingTop="@dimen/capture_preview_caption_text_padding_vertical" android:paddingBottom="@dimen/capture_preview_caption_text_padding_vertical" android:scrollbars="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/add_caption" android:maxLines="6" android:layout_weight="1" android:inputType="textMultiLine" android:imeOptions="actionDone" style="?attr/editTextStyle"/>
                <View android:id="@+id/view_once_toggle_spacer" android:layout_width="@dimen/capture_preview_caption_text_padding_right" android:layout_height="0dp"/>
                <com.whatsapp.WaImageView android:gravity="center" android:layout_gravity="bottom" android:id="@+id/view_once_toggle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_viewonce" android:scaleType="center" app:tint="@color/capturePreviewCaptionInputIconTint" app:tintMode="multiply" style="@style/ActionBarButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
        <com.whatsapp.WaImageButton android:id="@+id/send" android:background="@drawable/input_circle" android:layout_width="@dimen/capture_preview_caption_send_button_width" android:layout_height="@dimen/capture_preview_caption_send_button_height" android:layout_marginLeft="@dimen/capture_preview_caption_inner_margin" android:layout_marginRight="@dimen/capture_preview_caption_margin_right" android:src="@drawable/input_send" android:scaleType="center" android:layout_alignBottom="@+id/input_container" android:layout_alignParentRight="true" android:contentDescription="@string/send_button" android:elevation="6dp" android:stateListAnimator="@anim/fab_animation"/>
        <com.whatsapp.emoji.search.EmojiSearchContainer android:id="@+id/emoji_search_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/input_container"/>
    </RelativeLayout>
</merge>
